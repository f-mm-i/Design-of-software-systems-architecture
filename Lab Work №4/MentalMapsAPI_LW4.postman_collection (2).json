  "item": [
    {
      "name": "Healthcheck - OK",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
              "pm.test(\"Response has status=ok\", function () { const j = pm.response.json(); pm.expect(j.status).to.eql(\"ok\"); pm.expect(j.version).to.eql(\"v1\"); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Maps",
      "item": [
        {
          "name": "POST /maps - OK (create map)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tokenUser}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/maps",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Прогулка по центру\",\n  \"description\": \"Маршрут и точки интереса\",\n  \"visibility\": \"private\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201 Created\", function () { pm.response.to.have.status(201); });",
                  "pm.test(\"Response contains mapId and ownerId\", function () {",
                  "  const j = pm.response.json();",
                  "  pm.expect(j).to.have.property(\"mapId\");",
                  "  pm.expect(j).to.have.property(\"ownerId\");",
                  "  pm.environment.set(\"mapId\", j.mapId);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /maps - OK (list maps)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tokenUser}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/maps"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                  "pm.test(\"Response has items array\", function () { const j = pm.response.json(); pm.expect(j.items).to.be.an(\"array\"); });"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /maps/:mapId - OK (owner)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tokenUser}}",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/maps/{mapId}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                  "pm.test(\"Response has requested mapId\", function () { const j = pm.response.json(); pm.expect(j.mapId).to.eql(pm.environment.get(\"mapId\")); });"
                ]
              }
            }
          ]
        },
        {
          "name": "PUT /maps/:mapId - OK (update map)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tokenUser}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": "{{baseUrl}}/maps/{mapId}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Прогулка по центру (обновлено)\",\n  \"description\": \"Обновленное описание\",\n  \"visibility\": \"public\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                  "pm.test(\"Response has updated fields\", function () {",
                  "  const j = pm.response.json();",
                  "  pm.expect(j.mapId).to.eql(pm.environment.get(\"mapId\"));",
                  "  pm.expect(j.title).to.eql(\"Прогулка по центру (обновлено)\");",
                  "  pm.expect(j.visibility).to.eql(\"public\");",
                  "  pm.expect(j.updatedAt).to.be.a(\"string\");",
                  "});"
                ]
              }
            }
          ]
        }
